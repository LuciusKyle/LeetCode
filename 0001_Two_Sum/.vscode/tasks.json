{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-g",
                    "*.cc",
                    "--std=c++2a",
                    "-Wall",
                    "-O0",
                    "-o",
                    "a.exe"
                ]
            },
            "linux": {
                "command": "g++",
                "args": [
                    "*.cc",
                    "-g",
                    "-std=c++2a",
                    "-Wall"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build_release",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "windows": {
                "command": "g++",
                "args": [
                    "*.cc",
                    "--std=c++2a",
                    "-Wall",
                    "-O2",
                    "-o",
                    "a.exe"
                ]
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "build_shared_lib",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "windows": {
                "command": "g++",
                "args": [
                    "*.cc",
                    "--std=c++2a",
                    "-shared",
                    "-Wall",
                    "-fPIC",
                    "-O2",
                    "-o",
                    "a.dll"
                ]
            },
            "problemMatcher": "$gcc"
        }
    ]
}